<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mvp.ui.activity.OpenDoor">
    <include
        android:id="@+id/ll_top"
        layout="@layout/toolbar"
        />
    <TextView
        android:text="请选择要开启的门"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="@dimen/margin_20"
        android:gravity="center_vertical"
        android:textColor="@color/green"
        android:paddingLeft="20dp"
        android:textStyle="bold"
        android:background="@color/transparent"
        android:textSize="@dimen/sp_18"/>


    <me.shihao.library.XRadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            >

            <RadioButton
                android:id="@+id/rb1"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/selector_fenqi"
                android:button="@null"
                android:gravity="center"
                android:text="北门"
                android:textColor="@drawable/selector_fenqi_text"
                android:textSize="@dimen/text_20"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/margin_20"
            android:paddingRight="@dimen/margin_20"
            >

            <RadioButton
                android:id="@+id/rb3"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/selector_fenqi"
                android:button="@null"
                android:gravity="center"
                android:text="西门"
                android:textColor="@drawable/selector_fenqi_text"
                android:textSize="@dimen/text_20"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_men"/>

            <RadioButton
                android:id="@+id/rb4"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:background="@drawable/selector_fenqi"
                android:button="@null"
                android:gravity="center"
                android:text="东门"
                android:textColor="@drawable/selector_fenqi_text"
                android:textSize="@dimen/text_20"/>


        </LinearLayout>

        <RadioButton
            android:id="@+id/rb5"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginTop="10dp"
            android:layout_marginRight="@dimen/margin_20"
            android:background="@drawable/selector_fenqi"
            android:button="@null"
            android:gravity="center"
            android:text="南门"
            android:textColor="@drawable/selector_fenqi_text"
            android:textSize="@dimen/text_20"/>

        <RadioButton
            android:id="@+id/rb2"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginTop="10dp"
            android:layout_marginRight="@dimen/margin_20"
            android:background="@drawable/selector_fenqi"
            android:button="@null"
            android:gravity="center"
            android:text="单元门"
            android:textColor="@drawable/selector_fenqi_text"
            android:textSize="@dimen/text_20"/>
    </me.shihao.library.XRadioGroup>

    <TextView
        android:id="@+id/tv_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="@dimen/margin_20"
        android:paddingTop="@dimen/margin_20"
        android:text="@string/tip"
        android:textColor="@color/orange_17527"
        android:textSize="@dimen/text_12"/>


    <Button
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/margin_20"
        android:enabled="false"
        android:text="请求开启"
        android:textStyle="bold"
        android:background="@drawable/selector_fenqi"
        android:textColor="@color/white"
        android:textSize="20dp"/>
</LinearLayout>