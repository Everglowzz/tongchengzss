<?xml version="1.0" encoding="utf-8"?>

<com.jess.arms.widget.autolayout.AutoScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:GroupViewItem="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical"
    >


    <com.zhy.autolayout.AutoLinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:GroupViewItem="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_bg"
        android:orientation="vertical"
        >

        <com.zhy.autolayout.AutoRelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="300px">


            <View
                android:layout_width="match_parent"
                android:layout_height="140px"
                android:background="@color/colorPrimary"/>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="260px"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginRight="@dimen/margin_20"
                android:background="@drawable/shape_white"
                android:orientation="vertical">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginRight="@dimen/margin"
                    android:layout_marginTop="8dp"
                    >

                    <TextView
                        style="@style/main_black_text"
                        android:layout_width="80dp"
                        android:text="业主姓名"/>

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textColor="@color/text_gray"
                        android:textSize="14sp"
                        tools:text="韩某某"/>

                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginRight="@dimen/margin"
                    >

                    <TextView
                        style="@style/main_black_text"
                        android:layout_width="80dp"
                        android:text="业主电话"/>

                    <TextView
                        android:id="@+id/tv_phone"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textColor="@color/text_gray"
                        android:textSize="14sp"
                        tools:text="13900499432"/>

                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginRight="@dimen/margin"
                    >

                    <TextView
                        style="@style/main_black_text"
                        android:layout_width="40dp"
                        android:text="单元"/>

                    <TextView
                        android:id="@+id/tv_danyuan"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textColor="@color/text_gray"
                        android:textSize="14sp"
                        tools:text="6#2"/>

                    <TextView
                        style="@style/main_black_text"
                        android:layout_width="50dp"
                        android:text="房间号"/>

                    <TextView
                        android:id="@+id/tv_fangjianhao"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8"
                        android:gravity="center_vertical"
                        android:textColor="@color/text_gray"
                        android:textSize="14sp"
                        tools:text="504"/>

                    <TextView
                        style="@style/main_black_text"
                        android:layout_width="40dp"
                        android:text="面积"/>

                    <TextView
                        android:id="@+id/tv_mianji"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textColor="@color/text_gray"
                        android:textSize="14sp"
                        tools:text="114.22"/>

                </com.zhy.autolayout.AutoLinearLayout>


            </com.zhy.autolayout.AutoLinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="120px"
                android:layout_height="120px"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="60px"
                android:src="@mipmap/default_photo"
                android:visibility="gone"
                app:civ_border_color="@color/main_while"
                app:civ_border_width="4px"/>
        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:layout_margin="@dimen/margin_20"
            android:background="@drawable/shape_white"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_recharge"
                android:layout_width="135px"
                android:layout_height="56px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="125px"
                android:background="@drawable/shape_main_color"
                android:gravity="center"
                android:text="充值"
                android:textColor="@color/main_while"/>

            <TextView
                android:id="@+id/tv_withdraw"
                android:layout_width="135px"
                android:layout_height="56px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="125px"
                android:background="@drawable/shape_transparency"
                android:gravity="center"
                android:text="提现"
                android:textColor="@color/colorPrimary"/>

        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_20"
            android:background="@drawable/shape_white"
            android:orientation="vertical"
            android:paddingBottom="@dimen/margin_20"
            android:paddingTop="@dimen/margin_20">

            <hzyj.come.zhangshangpingtai.mvp.ui.widget.GroupViewItem
                android:id="@+id/item_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                GroupViewItem:leftImage="@mipmap/yinhangka"
                GroupViewItem:title="我的银行卡"
                />

            <View
                style="@style/GrayLineHorizontal"
                android:visibility="gone"
                />

            <hzyj.come.zhangshangpingtai.mvp.ui.widget.GroupViewItem
                android:id="@+id/item_truth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                GroupViewItem:leftImage="@mipmap/renzheng"
                GroupViewItem:title="实名认证"
                />

            <View
                style="@style/GrayLineHorizontal"
                android:visibility="gone"
                />

            <hzyj.come.zhangshangpingtai.mvp.ui.widget.GroupViewItem
                android:id="@+id/item_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                GroupViewItem:leftImage="@drawable/ic_dingdan"
                GroupViewItem:title="订单查询"
                />

            <View
                style="@style/GrayLineHorizontal"
                android:visibility="visible"
                />

            <hzyj.come.zhangshangpingtai.mvp.ui.widget.GroupViewItem
                android:id="@+id/item_xiaoxi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                GroupViewItem:leftImage="@drawable/ic_message"
                GroupViewItem:title="消息通知"
                />

            <View style="@style/GrayLineHorizontal"
                />


            <hzyj.come.zhangshangpingtai.mvp.ui.widget.GroupViewItem
                android:id="@+id/item_setting"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                GroupViewItem:leftImage="@drawable/ic_renxiang"
                GroupViewItem:title="门禁人像设置"
                />

          
            <hzyj.come.zhangshangpingtai.mvp.ui.widget.GroupViewItem
                android:id="@+id/item_check_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                GroupViewItem:leftImage="@drawable/ic_change_light"
                GroupViewItem:title="检测新版本"
                />

            <View style="@style/GrayLineHorizontal"/>

            <hzyj.come.zhangshangpingtai.mvp.ui.widget.GroupViewItem
                android:id="@+id/item_suggest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                GroupViewItem:leftImage="@drawable/ic_post"
                GroupViewItem:title="投诉建议"
                />

            <View style="@style/GrayLineHorizontal"
                />

            <hzyj.come.zhangshangpingtai.mvp.ui.widget.GroupViewItem
                android:id="@+id/item_us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                GroupViewItem:leftImage="@drawable/ic_service_light"
                GroupViewItem:title="关于我们"
                />


        </com.zhy.autolayout.AutoLinearLayout>

        <Button

            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginRight="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin"
            android:background="@drawable/btn_selected"
            android:enabled="true"
            android:text="退出"
            android:textColor="@color/white"
            android:textSize="18dp"/>
    </com.zhy.autolayout.AutoLinearLayout>
</com.jess.arms.widget.autolayout.AutoScrollView>