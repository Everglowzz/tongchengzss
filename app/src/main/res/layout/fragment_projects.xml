<?xml version="1.0" encoding="utf-8"?>
<com.jess.arms.widget.autolayout.AutoScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                                xmlns:tools="http://schemas.android.com/tools"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:background="@color/bbbbbb"
                                                android:orientation="vertical"
    >


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <com.youth.banner.Banner
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:visibility="visible"/>

        <LinearLayout
            android:id="@+id/ll_inform"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_46"
            android:layout_marginTop="10dp"
            android:layout_marginRight="@dimen/margin_46"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_inform"/>

            <hzyj.come.zhangshangpingtai.custom.MarqueeTextView
                android:id="@+id/tv_roll_text"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:ellipsize="marquee"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/orange_17527"
                android:textSize="@dimen/sp_14"
                />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_project_query"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="@dimen/margin_46"
            android:layout_marginRight="@dimen/margin_46"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_white_8r"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                style="@style/text_norm_black"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:drawableLeft="@drawable/ic_xiangmuchaxun"
                android:text="缴费项目查询"
              
                android:textSize="18dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="50dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#707070"
                    android:text="水费"
                    android:drawableLeft="@drawable/ic_shui"
                    android:textSize="13dp"/>
                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#707070"
                    android:drawableLeft="@drawable/ic_dian"
                    android:text="电费"
                    android:textSize="13dp"/>
                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#707070"
                    android:drawableLeft="@drawable/ic_wuye"
                    android:text="物业费"
                    android:textSize="13dp"/>
            </LinearLayout>
           

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_jiaofei"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="@dimen/margin_46"
            android:layout_marginRight="@dimen/margin_46"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_white_8r"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                style="@style/text_norm_black"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:drawableLeft="@drawable/ic_wuyejiaofei"
                android:drawablePadding="15dp"
                android:text="远程开启门禁"
                android:textSize="18dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="50dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#707070"
                    android:text="钥匙"
                    android:drawableLeft="@drawable/ic_yaoshi"
                    android:textSize="13dp"/>
           
            </LinearLayout>

        </RelativeLayout>

      

        <LinearLayout
            android:background="@drawable/shape_white_8r"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="@dimen/margin_46"
            android:layout_marginRight="@dimen/margin_46"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="@dimen/margin_46"
            
                android:layout_marginRight="@dimen/margin_46"
                android:background="@drawable/shape_white_8r"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="便民查询"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:orientation="horizontal"
            android:background="@color/white"
            android:visibility="visible"
            >

            <TextView
                android:id="@+id/tv_shengxiao"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_shengxiao"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="生肖测算"
                android:textColor="@color/black"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/tv_jiri"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_jiri"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="吉日查询"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_jiemeng"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_jiemeng"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="周公解梦"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_xingzuo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_xingzuo"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="星座运势"
                android:textColor="@color/black"
                android:textSize="16sp"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/head_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:orientation="horizontal"
            android:background="@color/white"
            android:visibility="visible"
            android:paddingBottom="20dp"
            >

       
            <TextView
                android:id="@+id/tv_jieqi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_jieqi"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="节气查询"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_chepai"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_chepai"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="车牌号测试"
                android:textColor="@color/black"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/tv_shouji"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_shoujihao"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="手机号测试"
                android:textColor="@color/black"
                android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
     
            android:orientation="horizontal"
            android:visibility="gone"
            >


          

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_shoujihao"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="手机号测试"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:visibility="invisible"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_shoujihao"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="手机号测试"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:visibility="invisible"/>


        </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_order_history"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginTop="20dp"
            android:layout_marginRight="@dimen/margin_20"
            android:layout_marginBottom="@dimen/margin_20"
            android:background="@drawable/shape_white_8r"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                style="@style/text_norm_black"
                android:layout_centerVertical="true"
                android:layout_marginLeft="100dp"
                android:drawableLeft="@drawable/ic_dindanchaxun"
                android:drawablePadding="15px"
                android:text="订单记录查询"
                android:textSize="18dp"/>

        </RelativeLayout>
    
        <Space
            android:layout_width="@dimen/m1"
            android:layout_height="20dp"/>

    </com.zhy.autolayout.AutoLinearLayout>


</com.jess.arms.widget.autolayout.AutoScrollView>