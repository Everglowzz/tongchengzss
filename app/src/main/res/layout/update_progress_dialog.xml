<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/updte_progress_bg"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="20dp"
            android:textColor="@color/orange_17527"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:lineSpacingExtra="1dp"
            android:lineSpacingMultiplier="1.2"
            android:textSize="@dimen/text_content_title_size"
            android:text="版本更新" />
        <hzyj.come.zhangshangpingtai.copy.dialog.NumberProgressBar
            android:id="@+id/update_progressbar"
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            app:max="100"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_houtai"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/selector_backgroundreversal"
            android:text="后台更新"
            android:textColor="#666666"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>