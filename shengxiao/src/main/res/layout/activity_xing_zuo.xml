<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/activity_xing_zuo"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="#ffffffff"
              android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="fill_parent"
                android:layout_height="120.0dip"
                android:background="@drawable/xingzuobeijing"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/xingzuohead"
                    android:layout_width="80.0dip"
                    android:layout_height="80.0dip"
                    android:layout_marginLeft="60.0dip"
                    android:src="@drawable/icon_sx_21"/>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="20.0dip"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/xingzuo"
                        android:layout_width="fill_parent"
                        android:layout_height="0.0dip"
                        android:layout_weight="1.0"
                        android:drawableLeft="@drawable/xztb_tc1"
                        android:drawablePadding="10.0dip"
                        android:gravity="center_vertical"
                        android:text="白羊座"
                        android:textColor="#ffffffff"
                        android:textSize="24.0sp"/>

                    <TextView
                        android:id="@+id/riqi"
                        android:layout_width="fill_parent"
                        android:layout_height="0.0dip"
                        android:layout_marginRight="20.0dip"
                        android:layout_weight="1.0"
                        android:gravity="right"
                        android:text="3.21-4.19"
                        android:textColor="#ffffffff"
                        android:textSize="18.0sp"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/xinxi"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20.0dip"
                android:background="@drawable/xingzuo_shape"
                android:lineSpacingMultiplier="1.5"
                android:padding="8.0dip"
                android:textColor="@color/white"
                android:textSize="16.0sp"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/yunshi"
                    android:layout_width="wrap_content"
                    android:layout_height="50.0dip"
                    android:background="@drawable/bg_text"
                    android:gravity="center"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="10.0dip"
                    android:text="星座运势"
                    android:textColor="#ffffffff"
                    android:textSize="18.0sp"/>

                <TextView
                    android:id="@+id/dangan"
                    android:layout_width="wrap_content"
                    android:layout_height="50.0dip"
                    android:gravity="center"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="10.0dip"
                    android:text="星座档案"
                    android:textColor="@color/text_bg_color"
                    android:textSize="18.0sp"/>
            </LinearLayout>

            <FrameLayout
                android:id="@+id/ll1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>